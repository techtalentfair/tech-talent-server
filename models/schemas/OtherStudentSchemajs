const mongoose = require('mongoose');

const otherStudentSchema = new mongoose.Schema({
  name: {
    type: String,
    required: true,
  },
  ld: {
    type: String,
    required: true,
    unique: true,
  },
  faculty: {
    type: String,
    required: true,
  },
  ldNational: {
    type: String,
    required: true,
  },
  university: {
    type: String,
    required: true,
  },
  level: {
    type: Number,
    required: true,
    min: 1
  }
}, {
  timestamps: true
});

const OtherStudent = mongoose.model('OtherStudent', otherStudentSchema);

module.exports = OtherStudent;
